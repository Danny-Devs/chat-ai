{
  "name": "chat-ai",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "chat-ai-api",
    "chat-ai-ui"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=chat-ai-api",
    "dev:ui": "npm run dev --workspace=chat-ai-ui",
    "dev": "npm-run-all --parallel dev:*",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
